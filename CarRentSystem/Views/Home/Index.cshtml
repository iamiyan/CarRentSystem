@{
    ViewData["Title"] = "Welcome to Car Rental System";
}

<div class="container text-center mt-5">
    <h1 class="fw-bold text-primary">🚗 Rent a Car with Ease!</h1>
    <p class="lead text-secondary">Find the perfect car for your journey at the best price.</p>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        <!-- Wide Selection -->
        <div class="col">
            <div class="card h-100 shadow border-0.5">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title text-primary">✅ Wide Selection</h4>
                    <p class="card-text text-secondary flex-grow-1">
                        Choose from a variety of cars, from economy to luxury.
                    </p>
                </div>
            </div>
        </div>

        <!-- Easy Payment -->
        <div class="col">
            <div class="card h-100 shadow border-0.5">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title text-success">💳 Easy Payment</h4>
                    <p class="card-text text-secondary flex-grow-1">
                        Secure online payments with multiple options.
                    </p>
                </div>
            </div>
        </div>

        <!-- 24/7 Support -->
        <div class="col">
            <div class="card h-100 shadow border-0.5">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title text-warning">🛠 24/7 Support</h4>
                    <p class="card-text text-secondary flex-grow-1">
                        Need help? Our support team is always available.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Login/Register Message -->
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> Please <strong>register</strong> or <strong>log in</strong> to reserve a car.
    </div>
</div>
