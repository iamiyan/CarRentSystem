@{
    ViewData["Title"] = "FAQ";
    var userRole = Context.Session.GetString("UserRole");
    var dashboardUrl = "/Home/Index"; // Default for non-logged-in users

    if (userRole == "Admin")
    {
        dashboardUrl = "/Home/AdminDashboard";
    }
    else if (userRole == "User")
    {
        dashboardUrl = "/Home/CustomerDashboard";
    }
}

<div class="container mt-5">
    <div class="card shadow-lg p-5 bg-light">
        <h1 class="text-center text-primary fw-bold"><i class="bi bi-question-circle"></i> Frequently Asked Questions</h1>
        <p class="text-center text-secondary">Find answers to common questions about our Car Rental System.</p>

        <hr class="my-4">

        <!-- FAQ Section -->
        <div class="accordion mt-4" id="faqAccordion">

            <!-- 🚗 Booking Process -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                        <i class="bi bi-car-front me-2"></i> How do I book a car?
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        To book a car, browse available cars on the <strong>Available Cars</strong> page, select your preferred vehicle, choose rental dates, and confirm the booking.
                    </div>
                </div>
            </div>

            <!-- 💳 Payment Methods -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                        <i class="bi bi-credit-card me-2"></i> What payment methods are accepted?
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        We currently accept payments via <strong>credit/debit cards</strong> and <strong>online banking</strong>. Cash payments are not supported.
                    </div>
                </div>
            </div>

            <!-- 🔄 Modifications & Cancellations -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree">
                        <i class="bi bi-arrow-repeat me-2"></i> Can I cancel or modify my reservation?
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes! You can modify or cancel your reservation from your <strong>Customer Dashboard</strong>. Cancellations within 24 hours of the rental start may be subject to a fee.
                    </div>
                </div>
            </div>

            <!-- 🛠 Troubleshooting Issues -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour">
                        <i class="bi bi-wrench-adjustable me-2"></i> What should I do if I face issues while booking?
                    </button>
                </h2>
                <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        If you face any issues, please contact our support team at <strong>support@carrental.com</strong> or visit the <strong>Contact Us</strong> page.
                    </div>
                </div>
            </div>

            <!-- 📝 Account Requirements -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFive">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive">
                        <i class="bi bi-person-badge me-2"></i> Do I need to create an account to rent a car?
                    </button>
                </h2>
                <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes, creating an account is required to book a car. This helps us keep track of your reservations and ensures a secure transaction process.
                    </div>
                </div>
            </div>

        </div> <!-- End of Accordion -->
        <!-- 🔗 Back Button -->
        <div class="text-center mt-4">
            <a href="@dashboardUrl" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-house-door"></i> Back to Home
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Accordion Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
