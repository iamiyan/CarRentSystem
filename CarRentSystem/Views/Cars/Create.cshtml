@model Car

<div class="container mt-4">
    <h2 class="text-center"><i class="bi bi-car-front-fill"></i> Add Car</h2>
    <p class="text-muted text-center">Fill in the details below to add a new car.</p>

    <div class="card shadow-lg p-4">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-building"></i> Brand</label>
                <input asp-for="Brand" class="form-control" placeholder="Enter car brand" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-car-front"></i> Model</label>
                <input asp-for="Model" class="form-control" placeholder="Enter car model" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-calendar"></i> Year</label>
                <input asp-for="Year" class="form-control" type="number" placeholder="Enter manufacturing year" required />
            </div>

            <div class="form-group mb-4">
                <label class="form-label"><i class="bi bi-cash-stack"></i> Price Per Day (RM)</label>
                <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" placeholder="Enter price per day" required />
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("AdminManageCars", "Cars")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>
