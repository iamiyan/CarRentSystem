@model Car

<div class="container mt-4">
    <h2 class="text-center"><i class="bi bi-pencil-square"></i> Edit Car</h2>
    <p class="text-muted text-center">Modify the details of the selected car.</p>

    <div class="card shadow-lg p-4">
        <form asp-action="Edit" asp-controller="Cars" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-building"></i> Brand</label>
                <input asp-for="Brand" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-car-front"></i> Model</label>
                <input asp-for="Model" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label"><i class="bi bi-calendar"></i> Year</label>
                <input asp-for="Year" class="form-control" type="number" required />
            </div>

            <div class="form-group mb-4">
                <label class="form-label"><i class="bi bi-cash-stack"></i> Price Per Day (RM)</label>
                <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" required />
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("AdminManageCars", "Cars")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
