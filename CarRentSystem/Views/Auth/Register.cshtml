@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 75vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center mb-4">📝 Register</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="Register" asp-controller="Auth" method="post">
            <div class="mb-3">
                <label class="form-label">👤 Name:</label>
                <input type="text" name="Name" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">📧 Email:</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">🔒 Password:</label>
                <input type="password" name="Password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Register</button>

            <div class="text-center mt-3">
                <p>Already have an account? <a href="@Url.Action("Login", "Auth")">Login</a></p>
            </div>
        </form>
    </div>
</div>
